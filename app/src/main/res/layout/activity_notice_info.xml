<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_grey"
    tools:context=".activity.NoticeInfoActivity">
    <TextView
        android:gravity="center"
        android:text="通知详情"
        android:padding="14dp"
        android:textColor="@color/black3"
        android:textSize="@dimen/size17"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/back"
        android:padding="@dimen/size15"
        android:src="@mipmap/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/line"
        android:layout_below="@+id/back"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/name"
        android:text="无标题"
        android:layout_below="@+id/line"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black3"
        android:textSize="@dimen/size20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/user"
        android:layout_below="@+id/name"
        android:layout_marginStart="10dp"
        android:text="无"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:textSize="@dimen/size14"
        android:textColor="@color/grey91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@mipmap/icon_qylxr" />
    <TextView
        android:id="@+id/time"
        android:layout_toEndOf="@+id/user"
        android:padding="10dp"
        android:text="无"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="10dp"
        android:drawablePadding="5dp"
        android:textSize="@dimen/size14"
        android:textColor="@color/grey91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@mipmap/icon_time" />
    <com.example.chart.view.MyGridView
        android:id="@+id/grid"
        android:layout_below="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:scrollbars="none"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:stretchMode="columnWidth"
        android:transcriptMode="alwaysScroll"
        android:verticalSpacing="10dp"/>

    <ScrollView
        android:layout_below="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:text="暂无信息"
                android:textColor="@color/black6"
                android:textSize="@dimen/size13" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>